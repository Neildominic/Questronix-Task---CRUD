<% include ../partials/header %>
<br>

<div class="" style="margin-left:30px;margin-right:30px">
	<div class="col s12">
		<a href="/event/add" class="btn btn-success btn-lg">Add a new events</a>
	</div>
</div>
<br>


<div class="" style="margin-left:30px;margin-right:30px">
	<div class="col s12">
		<% if (items.length > 0) { %>
			<table class="table">
				<thread>
					<tr>
						<th style="width:1%;text-align:center">ID</th>
						<th style="width:49%">Name</th>
						<th style="width:20%">Quantity</th>
						<th style="width:10%">Value</th>
						<th solspan="2" style="width:20%;text-align:center">Action</th>
					</tr>
				</thread>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
						<td sytle="width:1%;text-align:center"><%= index + 1 %></td>
						<td style="width:49%"><%= item.Name %></td>
						<td style="width:20%"><%= item.Quantity %></td>
						<td style="width:10%"><%= item.Value %></td>
						<td solspan="2" style="width:20%;text-align:center">
							<a href="/event/edit/<%= item.ID %>" class="btn btn-success">Edit</a>
							<a href="/event/delete/<%= item.ID %>" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				<%}); %>
			</tbody>
			</table>
		<% }else{ %>
			<p><strong>There are no recods available</strong></p>
		<% } %>
	</div>
</div>

<% include ../partials/footer %>