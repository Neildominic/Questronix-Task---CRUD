<% include ../partials/header %>
<br>
<div class="row" style="margin-left: 30px; margin-right: 30px;">
	<form action="http://localhost:4000/event/edit/ <%= item[0].ID %>" method="post" class="col s12">
		<input type="hidden" name="ID" values="<%= item[0].ID %>">

		<div class="form-group row">
			<label for="Name" class="col-2 col-form-label">Name</label>
			<div class="col-10">
				<input type="text" name="Name" value="<%= item[0].Name %>"class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="Quantity" class="col-2 col-form-label">Quantity</label>
			<div class="col-10">
				<input type="text" name="Quantity" value="<%= item[0].Quantity %>"class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="Value" class="col-2 col-form-label">Value</label>
			<div class="col-10">
				<input type="text" name="Value" value="<%= item[0].Value %>"class="form-control">
			</div>
		</div>

		<div class="form-group row">
				<label for="Value" class="col-2 col-form-label" style="color:#ffffff">Click here to submit</label>
			<div class="col-10">
				<input type="submit" name="submit" value="Save event" class="btn btn-primary btn-lg">
			</div>
		</div>
	</form>
</div>
<% include ../partials/footer %>